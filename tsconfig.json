{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "lib": ["ESNext","DOM"],
    "target": "ESNext",
    "module": "ESNext",

    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true
  }
}
